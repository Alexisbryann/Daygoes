<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardBg"
    tools:ignore="MissingDefaultResource">

    <FrameLayout
        android:id="@+id/frameLayout12"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background1"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:id="@+id/scrollView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/tv_matatu_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            android:text="@string/vehicle_name"
                            android:textAllCaps="true"
                            android:textColor="@color/colorAccentGreen"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <FrameLayout
                            android:id="@+id/frameLayout3"
                            android:layout_width="0dp"
                            android:layout_height="200dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="8dp"
                            android:background="@color/cardBgDark"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_matatu_name">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                            <!-- Circular progress indicator -->
                            <com.google.android.material.progressindicator.CircularProgressIndicator
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center" />

                            <com.daimajia.slider.library.SliderLayout
                                android:id="@+id/slider"
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                app:pager_animation="Default"
                                app:pager_animation_span="1100" />


                        </FrameLayout>

                        <FrameLayout
                            android:id="@+id/frameLayout6"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/btn_media">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/textView14"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="@string/share"
                                    android:textAllCaps="false"
                                    android:textSize="12sp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="0.5"
                                    app:layout_constraintStart_toEndOf="@+id/tv_favourites_no"
                                    app:layout_constraintTop_toBottomOf="@+id/img_share" />

                                <com.varunest.sparkbutton.SparkButton
                                    android:id="@+id/img_like"
                                    android:layout_width="@dimen/touch_icon1"
                                    android:layout_height="@dimen/touch_icon1"
                                    android:contentDescription="@string/thumbs_up_icon"
                                    app:layout_constraintEnd_toStartOf="@+id/img_favourite"
                                    app:layout_constraintHorizontal_bias="0.5"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:sparkbutton_activeImage="@drawable/like_active"
                                    app:sparkbutton_inActiveImage="@drawable/like_inactive"
                                    app:sparkbutton_primaryColor="@color/colorAccentGreen"
                                    app:sparkbutton_secondaryColor="@color/colorPrimaryBlue" />

                                <com.varunest.sparkbutton.SparkButton
                                    android:id="@+id/img_favourite"
                                    android:layout_width="@dimen/touch_icon1"
                                    android:layout_height="@dimen/touch_icon1"
                                    android:layout_marginStart="32dp"
                                    android:contentDescription="@string/favourite_icon"
                                    app:layout_constraintEnd_toStartOf="@+id/img_share"
                                    app:layout_constraintHorizontal_bias="0.5"
                                    app:layout_constraintStart_toEndOf="@+id/img_like"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:sparkbutton_activeImage="@drawable/heart_active"
                                    app:sparkbutton_inActiveImage="@drawable/heart_inactive"
                                    app:sparkbutton_primaryColor="@color/heart_primary_color"
                                    app:sparkbutton_secondaryColor="@color/colorAccentAmber" />

                                <ImageView
                                    android:id="@+id/img_share"
                                    android:layout_width="@dimen/touch_icon1"
                                    android:layout_height="@dimen/touch_icon1"
                                    android:layout_marginStart="32dp"
                                    android:contentDescription="@string/share_icon"
                                    android:foregroundGravity="center"
                                    android:scaleType="center"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="0.5"
                                    app:layout_constraintStart_toEndOf="@+id/img_favourite"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:srcCompat="@drawable/share" />

                                <TextView
                                    android:id="@+id/tv_likes_no"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textSize="12sp"
                                    app:layout_constraintEnd_toStartOf="@+id/tv_favourites_no"
                                    app:layout_constraintHorizontal_bias="0.5"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/img_like" />

                                <TextView
                                    android:id="@+id/tv_favourites_no"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textSize="12sp"
                                    app:layout_constraintEnd_toStartOf="@+id/textView14"
                                    app:layout_constraintHorizontal_bias="0.5"
                                    app:layout_constraintStart_toEndOf="@+id/tv_likes_no"
                                    app:layout_constraintTop_toBottomOf="@+id/img_favourite" />

                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </FrameLayout>

                        <FrameLayout
                            android:id="@+id/frameLayout5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView2">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <RatingBar
                                    android:id="@+id/ratingBar"
                                    style="@android:style/Widget.Holo.Light.RatingBar"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:numStars="5"
                                    android:progressTint="@color/colorAccentAmber"
                                    android:stepSize="@dimen/material_emphasis_high_type"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </FrameLayout>

                        <View
                            android:id="@+id/divider3"
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="10dp"
                            android:background="@color/colorAccentAmber"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/frameLayout3" />

                        <View
                            android:id="@+id/divider4"
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="10dp"
                            android:background="@color/colorAccentAmber"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_rating_comments" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/rate_vehicle"
                            android:textColor="@color/colorPrimaryBlack"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/frameLayout6" />

                        <View
                            android:id="@+id/divider8"
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="10dp"
                            android:background="@color/colorAccentAmber"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/frameLayout6" />

                        <TextView
                            android:id="@+id/tv_rating_comments"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:textColor="@color/colorPrimaryBlack"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/frameLayout5" />

                        <Button
                            android:id="@+id/btn_media"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/view_videos"
                            android:textAllCaps="true"
                            android:textColor="@color/colorPrimaryBlack"
                            app:cornerRadius="16dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/frameLayout3"
                            app:rippleColor="@color/colorAccentRed" />

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/fab_chat"
                            android:layout_width="@dimen/touch_icon"
                            android:layout_height="@dimen/touch_icon"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="8dp"
                            android:backgroundTint="@color/colorAccentAmber"
                            android:clickable="true"
                            android:contentDescription="@string/chat_button"
                            android:focusable="true"
                            android:stateListAnimator="@android:anim/fade_in"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/divider4"
                            app:rippleColor="@color/colorAccentRed"
                            app:srcCompat="@drawable/chat"
                            app:useCompatPadding="true" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>
            </ScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>