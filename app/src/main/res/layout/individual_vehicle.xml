<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    tools:ignore="MissingDefaultResource">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:id="@+id/frameLayout7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_rating_comments">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/tv_matatu_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:gravity="center|start"
                            android:text="@string/vehicle_name"
                            android:textAllCaps="true"
                            android:textColor="@color/colorPrimaryBlack"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_plate"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp"
                            android:gravity="center"
                            android:text="@string/plate"
                            android:textAllCaps="true"
                            android:textColor="@color/colorPrimaryBlack"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toStartOf="@+id/tv_sacco"
                            app:layout_constraintStart_toEndOf="@+id/tv_matatu_name"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_sacco"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:gravity="start"
                            android:text="@string/capacity"
                            android:textAllCaps="true"
                            android:textColor="@color/colorPrimaryBlack"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/frameLayout5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <RatingBar
                            android:id="@+id/ratingBar"
                            style="@android:style/Widget.Holo.Light.RatingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:focusable="true"
                            android:numStars="5"
                            android:progressTint="@color/colorAccentAmber"
                            android:stepSize="@dimen/material_emphasis_high_type"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView2" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/rate_vehicle"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textColor="@color/colorPrimaryBlack"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="@+id/ratingBar"
                            app:layout_constraintStart_toStartOf="@+id/ratingBar"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </FrameLayout>

                <View
                    android:id="@+id/divider9"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/colorAccentAmber"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/frameLayout7" />

                <TextView
                    android:id="@+id/tv_rating_comments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccentGreen"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/frameLayout5" />

                <FrameLayout
                    android:id="@+id/frameLayout16"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/frameLayout7">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <FrameLayout
                            android:id="@+id/frameLayout6"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:background="#80FFFFFF"
                            android:backgroundTintMode="add"
                            android:elevation="100dp"
                            android:orientation="horizontal"
                            android:visibility="visible"
                            app:layout_constraintBottom_toBottomOf="@+id/frameLayout15"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/frameLayout3">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/textView9"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:gravity="center"
                                    android:text="@string/like"
                                    android:textAllCaps="false"
                                    android:textColor="@color/colorPrimaryBlack"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    app:layout_constraintEnd_toEndOf="@+id/tv_favourites_no"
                                    app:layout_constraintStart_toStartOf="@+id/tv_favourites_no"
                                    app:layout_constraintTop_toBottomOf="@+id/tv_favourites_no" />

                                <TextView
                                    android:id="@+id/textView12"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:gravity="center"
                                    android:text="@string/favourite"
                                    android:textAllCaps="false"
                                    android:textColor="@color/colorPrimaryBlack"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/textView14"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:gravity="center"
                                    android:text="@string/share"
                                    android:textAllCaps="false"
                                    android:textColor="@color/colorPrimaryBlack"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    app:layout_constraintEnd_toEndOf="@+id/tv_dislikes_no"
                                    app:layout_constraintStart_toStartOf="@+id/tv_dislikes_no"
                                    app:layout_constraintTop_toBottomOf="@+id/tv_dislikes_no" />

                                <ImageView
                                    android:id="@+id/img_like"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:contentDescription="@string/thumbs_up_icon"
                                    app:layout_constraintEnd_toEndOf="@+id/textView9"
                                    app:layout_constraintStart_toStartOf="@+id/textView9"
                                    app:layout_constraintTop_toBottomOf="@+id/textView9"
                                    app:srcCompat="@drawable/thumb_up"
                                    app:tint="@color/colorShimmer" />

                                <ImageView
                                    android:id="@+id/img_favourite"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:contentDescription="@string/favourite_icon"
                                    app:layout_constraintEnd_toEndOf="@+id/textView12"
                                    app:layout_constraintStart_toEndOf="@+id/img_like"
                                    app:layout_constraintStart_toStartOf="@+id/textView12"
                                    app:layout_constraintTop_toBottomOf="@+id/textView12"
                                    app:srcCompat="@drawable/hearts"
                                    app:tint="@color/colorShimmer" />

                                <ImageView
                                    android:id="@+id/img_share"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:contentDescription="@string/share_icon"
                                    app:layout_constraintEnd_toEndOf="@+id/textView14"
                                    app:layout_constraintStart_toStartOf="@+id/textView14"
                                    app:layout_constraintTop_toBottomOf="@+id/textView14"
                                    app:srcCompat="@drawable/share" />

                                <TextView
                                    android:id="@+id/tv_likes_no"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textColor="@color/colorPrimaryBlack"
                                    app:layout_constraintEnd_toEndOf="@+id/textView9"
                                    app:layout_constraintStart_toEndOf="@+id/img_like"
                                    app:layout_constraintStart_toStartOf="@+id/textView9"
                                    app:layout_constraintTop_toBottomOf="@+id/img_like" />

                                <TextView
                                    android:id="@+id/tv_favourites_no"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textColor="@color/colorPrimaryBlack"
                                    app:layout_constraintEnd_toEndOf="@+id/textView12"
                                    app:layout_constraintStart_toEndOf="@+id/img_favourite"
                                    app:layout_constraintStart_toStartOf="@+id/textView12"
                                    app:layout_constraintTop_toBottomOf="@+id/img_favourite" />

                                <TextView
                                    android:id="@+id/textView10"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:gravity="center"
                                    android:text="@string/dislike"
                                    android:textColor="@color/colorPrimaryBlack"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    app:layout_constraintEnd_toEndOf="@+id/tv_likes_no"
                                    app:layout_constraintStart_toStartOf="@+id/tv_likes_no"
                                    app:layout_constraintTop_toBottomOf="@+id/tv_likes_no" />

                                <ImageView
                                    android:id="@+id/img_dislike"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:contentDescription="@string/dislike"
                                    app:layout_constraintEnd_toEndOf="@+id/textView10"
                                    app:layout_constraintStart_toStartOf="@+id/textView10"
                                    app:layout_constraintTop_toBottomOf="@+id/textView10"
                                    app:srcCompat="@drawable/thumbs_down"
                                    app:tint="@color/colorShimmer" />

                                <TextView
                                    android:id="@+id/tv_dislikes_no"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textColor="@color/colorPrimaryBlack"
                                    app:layout_constraintEnd_toEndOf="@+id/textView10"
                                    app:layout_constraintStart_toStartOf="@+id/textView10"
                                    app:layout_constraintTop_toBottomOf="@+id/img_dislike" />

                                <com.google.android.material.floatingactionbutton.FloatingActionButton
                                    android:id="@+id/fab_chat"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:clickable="true"
                                    android:contentDescription="@string/chat_button"
                                    android:focusable="true"
                                    android:stateListAnimator="@android:anim/fade_in"
                                    app:backgroundTint="@color/colorAccentAmber"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/img_share"
                                    app:rippleColor="@color/colorAccentRed"
                                    app:srcCompat="@drawable/chat"
                                    app:useCompatPadding="true" />

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btn_make_post"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/ripple"
                                    android:fontFamily="sans-serif"
                                    android:includeFontPadding="true"
                                    android:paddingStart="8dp"
                                    android:paddingEnd="8dp"
                                    android:text="@string/make_post"
                                    android:textColor="@color/colorPrimaryBlack"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    app:backgroundTint="@color/colorAccentAmber"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/fab_chat"
                                    app:rippleColor="@color/colorAccentRed" />

                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </FrameLayout>

                        <FrameLayout
                            android:id="@+id/frameLayout3"
                            android:layout_width="0dp"
                            android:layout_height="250dp"
                            android:background="@color/colorPrimaryWhite"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <com.daimajia.slider.library.SliderLayout
                                    android:id="@+id/slider"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scrollIndicators="start|end"
                                    android:verticalScrollbarPosition="defaultPosition"
                                    app:indicator_visibility="visible"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="0.0"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintVertical_bias="0.0"
                                    app:pager_animation="Default"
                                    app:pager_animation_span="1100" />
                            </androidx.constraintlayout.widget.ConstraintLayout>


                        </FrameLayout>

                        <FrameLayout
                            android:id="@+id/frameLayout15"
                            android:layout_width="0dp"
                            android:layout_height="250dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/frameLayout3">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <VideoView
                                    android:id="@+id/videoView2"
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </FrameLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </FrameLayout>

                <View
                    android:id="@+id/divider11"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/colorAccentAmber"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_rating_comments" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>