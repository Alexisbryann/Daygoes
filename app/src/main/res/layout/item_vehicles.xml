<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#FFF3E0"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            app:contentPadding="4dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imgview_vehicle_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:srcCompat="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/tv_route"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="Vehicle name:"
                    android:textColor="@color/colorPrimaryBlack"
                    android:textSize="18sp"
                    app:layout_constraintStart_toEndOf="@+id/imgview_vehicle_photo"
                    app:layout_constraintTop_toTopOf="@+id/imgview_vehicle_photo" />

                <TextView
                    android:id="@+id/tv_vehicle_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Route:"
                    android:textColor="@color/colorPrimaryBlack"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="@+id/tv_route"
                    app:layout_constraintStart_toEndOf="@+id/imgview_vehicle_photo"
                    app:layout_constraintStart_toStartOf="@+id/tv_route"
                    app:layout_constraintTop_toBottomOf="@+id/tv_route" />

                <TextView
                    android:id="@+id/tv_vehicle_plate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Capacity:"
                    android:textColor="@color/colorPrimaryBlack"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="@+id/tv_vehicle_name"
                    app:layout_constraintStart_toStartOf="@+id/tv_vehicle_name"
                    app:layout_constraintTop_toBottomOf="@+id/tv_vehicle_name" />

                <TextView
                    android:id="@+id/tv_capacity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="No. plate:"
                    android:textColor="@color/colorPrimaryBlack"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="@+id/tv_vehicle_plate"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/tv_vehicle_plate"
                    app:layout_constraintTop_toBottomOf="@+id/tv_vehicle_plate" />

                <TextView
                    android:id="@+id/tv_ratings"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Ratings:"
                    android:textColor="@color/colorPrimaryBlack"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="@+id/tv_capacity"
                    app:layout_constraintStart_toStartOf="@+id/tv_capacity"
                    app:layout_constraintTop_toBottomOf="@+id/tv_capacity" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:text="TextView"
                    android:textColor="@color/colorAccentGreen"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_route"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tv_route"
                    app:layout_constraintTop_toTopOf="@+id/tv_route" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:text="TextView"
                    android:textColor="@color/colorAccentGreen"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_vehicle_name"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/textView6"
                    app:layout_constraintTop_toTopOf="@+id/tv_vehicle_name" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:text="TextView"
                    android:textColor="@color/colorAccentGreen"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_vehicle_plate"
                    app:layout_constraintEnd_toEndOf="@+id/textView7"
                    app:layout_constraintStart_toStartOf="@+id/textView7"
                    app:layout_constraintTop_toTopOf="@+id/tv_vehicle_plate" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:text="TextView"
                    android:textColor="@color/colorAccentGreen"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_capacity"
                    app:layout_constraintEnd_toEndOf="@+id/textView8"
                    app:layout_constraintStart_toStartOf="@+id/textView8"
                    app:layout_constraintTop_toTopOf="@+id/tv_capacity" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:text="TextView"
                    android:textColor="@color/colorAccentGreen"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_ratings"
                    app:layout_constraintEnd_toEndOf="@+id/textView11"
                    app:layout_constraintStart_toStartOf="@+id/textView11"
                    app:layout_constraintTop_toTopOf="@+id/tv_ratings" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>