<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/cardBg</item>
        <item name="colorAccent">@color/colorAccentGreen</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <!--        <item name="backgroundTint">@color/colorAccentAmber</item>-->
    </style>

    <!--    <style name="AlertDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">-->
    <!--        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>-->
    <!--        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>-->
    <!--        <item name="textColor"-->
    <!--    </style>-->

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorPrimaryBlack</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorPrimaryBlack</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="almendraText">
        <item name="android:fontFamily">@font/almendra</item>
        <item name="textAllCaps">true</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>